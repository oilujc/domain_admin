{% extends 'templates/app.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}
    <h1>New Domain</h1>
{% endblock %}
{% block content %}
    <section class="forms">
        <div class="container-fluid">
          <div class="row">
            
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <form class="form-horizontal">
                    <!-- Domain name -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Domain Name</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="example.com">
                      </div>
                    </div>
                    <!-- Registrar -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Registrar</label>
                      <div class="col-sm-10 select">
                        <select name="account" class="form-control">
                          <option>option 1</option>
                          <option>option 2</option>
                          <option>option 3</option>
                          <option>option 4</option>
                        </select>
                      </div>
                    </div>
                    <!-- Added to Account Date -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Added to Account Date</label>
                      <div class="col-sm-10">
                        <input type="date" class="form-control">
                      </div>
                    </div>
                    <!-- Registry Created Date -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Registry Created Date</label>
                      <div class="col-sm-10">
                        <input type="date" class="form-control">
                      </div>
                    </div>
                    <!-- Updated Date -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Updated Date</label>
                      <div class="col-sm-10">
                        <input type="date" class="form-control">
                      </div>
                    </div>
                    <!-- Expiry Date -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Expiry Date</label>
                      <div class="col-sm-10">
                        <input type="date" class="form-control">
                      </div>
                    </div>
                    <!-- Registrant Email -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Registrant Email</label>
                      <div class="col-sm-10 select">
                        <select name="account" class="form-control">
                          <option>option 1</option>
                          <option>option 2</option>
                          <option>option 3</option>
                          <option>option 4</option>
                        </select>
                      </div>
                    </div>
                    <!-- Admin Email -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Admin Email</label>
                      <div class="col-sm-10 select">
                        <select name="account" class="form-control">
                          <option>option 1</option>
                          <option>option 2</option>
                          <option>option 3</option>
                          <option>option 4</option>
                        </select>
                      </div>
                    </div>
                    <!-- Group (Portfolio) -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Group (Portfolio)</label>
                      <div class="col-sm-10 select">
                        <select name="account" class="form-control">
                          <option>option 1</option>
                          <option>option 2</option>
                          <option>option 3</option>
                          <option>option 4</option>
                        </select>
                      </div>
                    </div>
                    <!-- Nameservers -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Nameservers</label>
                      <div class="col-sm-10 select">
                        <select name="account" class="form-control">
                          <option>option 1</option>
                          <option>option 2</option>
                          <option>option 3</option>
                          <option>option 4</option>
                        </select>
                      </div>
                    </div>
                    <!-- Checkboxes -->
                    <div class="form-group row"><label class="col-sm-2 form-control-label">Other Options</label>
                      <div class="col-sm-10">
                        <!-- WHOIS Privacy -->
                        <div class="i-checks">
                          <input id="checkboxCustom1" type="checkbox" value="" class="form-control-custom">
                          <label for="checkboxCustom1">WHOIS Privacy</label>
                        </div>
                        <!-- Autorenew -->
                        <div class="i-checks">
                          <input id="checkboxCustom1" type="checkbox" value="" class="form-control-custom">
                          <label for="checkboxCustom1">Autorenew</label>
                        </div>
                        <!-- Transfer Locked -->
                        <div class="i-checks">
                          <input id="checkboxCustom1" type="checkbox" value="" class="form-control-custom">
                          <label for="checkboxCustom1">Transfer Locked</label>
                        </div>
                      </div>
                    </div>
                    <!-- Auth Code -->
                    <div class="form-group row">
                      <label class="col-sm-2 form-control-label">Auth Code</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control">
                      </div>
                    </div>
                    <div class="line"></div>
                    <div class="form-group row">
                      <div class="col-sm-4 offset-sm-2">
                        <button type="submit" class="btn btn-secondary">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
<!--          xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx       -->
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
   
{% endblock %}
{% block foot %}
    {{ parent() }}
{% endblock %}